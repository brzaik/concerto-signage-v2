/* Global Reset */

@import "headers";
@import "variables";
@import "mixins";

/////////


body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, button, textarea, p, blockquote, th, td {
	margin: 0;
  	padding: 0; 
}

body {
  	font-size: small;
  	font-family: $sans-body;
  	background: #131313;
  	color: #333;
  	min-width: 1010px; 
}

table {
	border-collapse: collapse;
  	border-spacing: 0; 
}

fieldset, img {
	border: 0; 
}

address, caption, cite, code, dfn, em, strong, b, th, var, optgroup {
	font-style: inherit;
  	font-weight: inherit; 
}

del, ins {
	text-decoration: none; 
}

li {
	list-style: none; 
}

caption, th {
	text-align: left; 
}

q {
	&:before, &:after {
		content: ''; 
	} 
}

abbr {
	border: 0;
  	font-variant: normal; 
}

sup, sub {
	vertical-align: baseline; 
}

b, strong {
	font-weight: bold; 
}

legend {
	color: #000; 
}

input, button, textarea, select, optgroup, option {
	font-family: inherit;
	font-size: inherit;
  	font-style: inherit;
  	font-weight: inherit; 
}

input, button, textarea, select {
	*font-size: 100%; 
}

small {
	font-size: 0.6em; 
}

a { 
	color: $concerto-blue;
	text-decoration: none;
	font-weight: bold;
	
	&:hover {
		text-decoration: underline;
	}

}

p {
	font-size:small;
	color:#333;
	margin-bottom:1.5em;
}



/* Page Display */

section {
  	float: left;
  
	&.single {
		@include rounded(6px, 6px, 6px, 6px);
		
		border:solid 1px #ccc;
		padding:16px;
		width:460px;
	}

}