$sans-headers: "Myriad Pro", Verdana, Arial, sans-serif;
$sans-body: "Lucida Grande", Geneva, Arial, Verdana, sans-serif;
$wrap-width: 980px;
$concerto-blue: #006699;


/* Common Inheritance */

.caps {
  	text-transform: uppercase; 
}

.spaced {
  	letter-spacing: .18em; 
}

.center {
  	text-align: center; 
}

.smaller {
  	font-size: 0.8em; 
}

.larger {
  	font-size: 1.2em; 
}

.emboss {
  	text-shadow: 0 1px 1px #FFF; 
}

.nomargin {
  	margin: 0 !important; 
}

.clear {
	clear: both; 
}

.floatleft {
	float:left;
}

.floatright {
	float:right;
}