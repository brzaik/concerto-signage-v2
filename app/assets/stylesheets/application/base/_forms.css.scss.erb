
/*##########################################################################*/
/*  Form Minimals  */
/*##########################################################################*/

@import "mixins";
@import "variables";

//////////////////

form {
	
	h1 {
		clear: both;
		color: #333;
    	font-size: 1.35em;
    	font-weight: normal;
    	border-bottom: solid 1px #999;
    	padding-top: 22px;
    	margin-bottom: 14px; 
	}
	
	fieldset {
		
		padding:18px 0px;
		
		.field {
			margin-bottom:10px;

			label {
				color:#666;
				font-family: $sans-headers;
				font-size:1em;
				letter-spacing:0em;
			}

			.inputs, .fieldbox {
	      		clear:both;
	      		margin-bottom: 12px; 
			}

	    	.inputs input, .fieldbox input {
	      		padding: 5px;
	      		background: #fefefe image-url('textfield_bg.png') top left repeat-x;
	      		border: solid 1px #999; 
			}

	    	.inputs {

	      		input {
					width:95%;
				}		
		
				textarea {
	        		width:96.5%;
	        		height: 100px;
	        		padding: 2px;
	        		background: #fefefe image-url('textfield_bg.png') top left repeat-x;
	        		border: solid 1px #999; 
				}

	      		input.alert {
	        		border: solid 2px #cc3333; 
				} 

			}

	    	.fieldbox {
	      		border: solid 1px #ccc;
	      		padding: 4px 6px;
				@include rounded(6px, 6px, 6px, 6px);
			}

		}
		
	}

	 
}
