/* Headers */

@import "variables";

////////


h1, h2, h3, h4, h5, h6 {
  margin-bottom: 18px !important;
  font-family: $sans-headers;
  font-weight: 700; }

h1 {
  font-size: 2.4em;
  font-weight: normal; }

h2 {
  font-size: 2em;
  font-weight: normal; }

h3 {
  font-size: 1.5em;
  font-weight: 400; }

a {
  color: $concerto-blue;
  font-weight: 700;
  text-decoration: none; }

p, li {
  line-height: normal;
  margin-bottom: 16px; }

a:hover {
  color: #369;
  text-decoration: underline; }

small {
  font-size: .6em; }

h1 small {
  padding-left: 12px; }

code {
  font-family: monospace; }