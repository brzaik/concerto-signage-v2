@import "../base/reset";
@import "../base/variables";

//////////

div#flashblock {
	background:#ffcc00;
	border-bottom:solid 2px yellow;
	color:#333;
	margin:0px !important;
	padding:8px 12px 6px 12px;
	
	h3 {
		margin:0px !important;
		padding:0px;
	}
}

div {
  &.wrap {
    position: relative;
    width: $wrap-width;
    margin: 0 auto; }
  &.indent {
    padding-left: 22px;
    margin: 0 auto; } }

strong, b {
  font-weight: bold; }

i, em {
  font-style: italic; }

/* Main Page Elements */

#adminfloat {
  position: absolute;
