.why-concerto {
  background: white image-url('bg_why.jpg') top center no-repeat !important; }

.help-page-home {
  height: 320px;
  background: image-url('support_jungle.jpg') bottom center no-repeat !important; }

.pagebg_demo {
  height: 320px;
  background: image-url('demo_screen.jpg') bottom center no-repeat !important; }

.pagebg_deploy {
  height: 320px;
  background: white image-url('bg_deploy.jpg') top center no-repeat !important; }

.pagebg_supporters {
  height: 320px;
  background: black image-url('mapbg.jpg') top center no-repeat !important; }

#stripe3 {
  background: white image-url('str3_bg.png') top left repeat-x;
  width: 100%; }

#stripe4 {
	color: #ccc;
  	background: image-url('str4_bg.jpg') top left repeat-x;
  	width: 100%;
  	
	div.wrap {
    	padding: 75px 0px 80px 0px !important; 
  	}
  
