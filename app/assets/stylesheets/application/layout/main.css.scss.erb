div.innerdiv {
  width: 982px;
  margin-left: auto;
  margin-right: auto; }

#maincontent {
  padding: 45px 0 30px; }

div {
  &.roundcell {
    clear: both;
    background: image-url('roundcell-mid.png') top center repeat-y; }
  &.roundcell-top {}
  &.roundcell-padding {
    padding: 0px 40px; }
  &.roundcell-bot {
    height: 11px;
    background: image-url('roundcell-bot.png') top center no-repeat;
    width: 100%; }
  &.roundcell-section {
    clear: both;
    margin: 0px -34px;
    padding: 34px;
    background: image-url('roundcell-sep.png') top center no-repeat;
    width: 100%; }
  &.flush {
    margin: 0px -34px; }
  &.insetcols {
    margin-top: 45px; }
  &.inset3col {
    float: left;
    width: 250px;
    margin-left: 55px; }
  &.inset3col_first {
    margin-left: 20px; }
  &.inset3col_quote {
    text-align: center;
    padding-top: 20px; }
  &.inset3col_2span {
    width: 520px !important; }
  &.inset3col {
    h1 {
      font-size: 12px !important;
      font-weight: bold !important;
      margin-bottom: 4px !important; }
    p {
      font-size: 11px;
      color: #333;
      line-height: 1.5 !important; } } }

p.quote {
  font-family: Georgia, Times, serif;
  border-top: solid 1px #ccc;
  border-bottom: solid 1px #ccc;
  padding: 6px 12px;
  font-style: italic;
  font-size: 1.2em !important; }

div {
  &#rc_univ {
    background: image-url('roundcell-top_univ.jpg') bottom center no-repeat;
    height: 173px;
    width: 100%; }
  &#rc_iphone {
    position: relative;
    background: image-url('pageimgs/wc_iphone.jpg') bottom right no-repeat;
    margin-right: -34px;
    padding-right: 550px; }
  &#rc_ems {
    padding-right: 450px;
    background: image-url('pageimgs/wc_ems.jpg') bottom right no-repeat;
    margin-right: -34px; } }

/* FP Hero Elements */

#screenslate {
  z-index: 1000;
  position: absolute;
  top: 180px;
  width: 383px;
  height: 357px;
  right: -15px; }

#fpth {
  background: image-url('fpth_bg.png') top center no-repeat;
  width: 660px;
  height: 111px;
  margin-top: 130px;
  margin-left: 25px;
  padding: 8px 10px 15px 55px;
  a {
    img {
      border: solid 1px #d4d4d4;
      margin: 0px 12px; }
    &:hover img {
      border: solid 1px #3399cc; } } }



#mc {
  float: left;
  width: 600px;
  p {
    line-height: 20px; }
  ul, ol {
    margin-left: 35px; }
  li {
    margin: 0px;
    margin-bottom: 6px;
    padding: 0px; } }

/* Sidebar */

div.sb {
  margin-top: 35px;
  margin-right: 10px;
  width: 320px;
  float: right;
  margin-left: 50px;
  margin-bottom: 25px; }

.sb-cols {
  	float: none;
  	margin: 0px 3px !important; 
}

div {
  &.sb-item {
    margin-bottom: 15px; }
  &.sb-top {
    background: image-url('sb-top_bg.png') bottom center no-repeat;
    height: 36px;
    h1 {
      color: #111 !important;
      font-size: 1.5em;
	  text-shadow:0px 1px 1px #FFF;
      font-weight: 400!important; } }
  &.sb-top-padding {
    padding: 10px 20px; }
  &.sb-mid {
    position: relative;
    background: image-url('sb-mid_bg.png') top center repeat-y; }
  &.sb-mid-padding {
    padding: 25px 20px; } }

.sb-cols div.sb-mid-padding {
  min-height: 400px; }

div {
  &.sb-bot {
    background: image-url('sb-bot_bg.png') top center no-repeat;
    height: 7px; }
  &.sb {
    ul, ol {
      margin-left: 22px; }
    li {
      margin: 6px 0px; } } }

.sb-admin {
  right: 0px !important;
  left: auto !important;
  top: 0px !important; }

/* Main Page Content Styles */

div {
  &.twocol {
    clear: both;
    width: 100%;
    margin-top: 50px; }
  &.twocol-left {
    float: left;
    width: 30%;
    text-align: right;
    h1 {
      margin: 0px !important;
      padding: 0px !important;
      line-height: normal !important; } }
  &.twocol-right {
    padding-top: 16px;
    float: right;
    width: 65%;
    p {
      font-size: 1.3em; } } }

/* Support Area Styles */

.post-body {
  h1 {
    margin: 45px 0px 25px 0px; }
  h2, h3, h4, h5 {} }

#hp-top {
  color: #ccc;
  padding: 55px 0px 1px 0px; }

#hp-title {
  h1 {
    color: #FFF;
    font-size: 2.6em;
    margin: 0px; }
  h2 {
    font-size: 1.8em;
    color: #999;
    a {
      font-weight: normal;
      color: #ccc; } }
  img {
    float: left;
    margin-right: 20px; } }

p#hp-details {
  font-size: 10px !important;
  text-align: right;
  color: #ccc; }

#fb-form {
  margin-top: 55px;
  border-top: solid 1px #ccc;
  padding-top: 25px; }

/* Feedback form */

#feedback_box {
	min-height: 110px;
	background: image-url('support_icon.gif') top left no-repeat;
	padding-left: 125px;
	margin: 25px 0px; 
	width: 480px;
}

#feedback_inner {
  border-left: 1px solid #999;
  padding: 20px 0px;
  padding-left: 25px; }

#feedback_box {
  h1 {
    color: #006699;
    font-size: 1.7em !important;
    margin: 0px;
    padding: 0px;
    margin-bottom: 4px; }
  h2 {
    color: #666;
    font-weight: normal;
    font-size: 1.1em !important;
    margin: 0px;
    padding: 0px;
    margin-bottom: 12px; } }


/* Admin Table */

table.admin {
  background: #eaeaea;
  border-bottom: solid 1px #999;
  border-right: solid 1px #999;
  th {
    background: #333;
    color: #FFF;
    text-align: left; }
  td, th {
    border-left: solid 1px #999;
    border-top: solid 1px #999;
    padding: 5px;
    vertical-align: top; }
  td.editcol {
    width: 70%; }
  h2 {
    font-weight: bold;
    color: #333;
    margin: 0px 0px 8px 0px !important; }
  textarea, input {
    width: 98%; }
  img.icon {
    padding: 0px !important;
    margin: 0px !important; } }

/* Share Links */

#share-links {
  position: absolute;
  right: 0px;
  top: 20px;
  border-bottom: solid 1px #ccc;
  padding: 4px 18px;
  margin: 0px 12px 25px 25px;
  text-transform: uppercase;
  font-size: 0.8em;
  text-align: right; }

#share-icons a img {
  border: none;
  margin: 0px 4px; }

/* Expanding / Collapsing OL for pages */

ol.expcol {
  li {
    list-style-type:decimal; 
	margin-top: 16px !important;
    font-size: 1.6em;
	font-weight:bold;
    color: #333; }
  div {
    margin-bottom: 22px;
    margin-top: 14px; }
  li a {
    color: #333; } }

/* Three-column layout for full-width pages */

div {
  &.threecol-full {
    text-align: center;
    float: left;
    width: 320px; }
  &.threecol-full_padding {
    padding: 25px; }
  &.threecol-full {
    p {
      text-align: left; }
    img {
      text-align: center !important; } }
  &.ben1 {} }