/* 
/* Main Menu */

@import "../base/mixins";
@import "../base/variables";

////////


ul#mainmenu {
  	font-size: 0.7em;
  	list-style: none;
  	padding-top: 46px;
  	
	li {
    	float: left;
    	width: 126px;
    	margin: 0 2px;
    	padding: 12px 0 0;
		
		a {
			background: image-url('menu_bg_states.png') no-repeat 0px 0px;
			display: block;
      		width: 90px;
			height:56px;
      		padding: 14px 18px 0px 18px;
      		color: #111;
      		font-size: 1.6em;
      		font-weight: normal;
      		font-family: $sans-headers;
      		text-decoration: none;
      		text-align: center; 
		}
    	
		&.selected a, a:hover {
			background: image-url('menu_bg_states.png') no-repeat -126px 0px; 
		}
    	
		&.sm {
      		margin: 0 3px!important;
      		width: 90px!important;
      		
			a {
        		background: image-url('menusm_bg_inact.png') top center no-repeat !important;
        		width: 54px;
        		
				&:hover {
          			background: image-url('menusm_bg_act.png') top center no-repeat !important; 
				} 
			
			}
      		
			&.selected a {
        		background: image-url('menusm_bg_act.png') top center no-repeat !important; 
			} 

		} 

	} 
}