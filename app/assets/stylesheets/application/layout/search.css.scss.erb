// Search Results page:

@import "../base/variables";
@import "../base/mixins";

#search_results {	
	b {
		@include rounded(5px, 5px, 5px, 5px);
		
		background:#ffcc00;
		border:solid 2px yellow;
		padding:3px;
	}
	
	h1 b {
		@include rounded(10px, 10px, 10px, 10px);
		
		padding-left:8px;
		padding-right:8px;
	}
	
	.result {
		@include rounded(8px, 8px, 8px, 8px);
		
		background:#e9e9e9;
		margin-bottom:8px;
		padding:12px 12px 12px 0px;
		
		.num {
			color:#FFF;
			float:left;
			width:100px;
			text-align:right;
			
			h1 {
				font-size:6em;
				margin:0px;
			}
		}
		
		.line {
			float:right;
			width:$wrap-width - 140px;
			
			h3 {
				margin:0px !important;
				padding:14px 0px 6px 0px;
			}
			
		}
		
	}
	
}