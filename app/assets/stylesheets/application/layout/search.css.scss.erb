// Search Results page:

@import "../base/variables";
@import "../base/mixins";

#search_results {	
	b {
		@include rounded(5px, 5px, 5px, 5px);
		
		background:#ffcc00;
		border:solid 2px yellow;
		padding:3px;
	}
	
	h1 b {
		@include rounded(10px, 10px, 10px, 10px);
		
		padding-left:8px;
		padding-right:8px;
	}
	
	.result {
		@include rounded(8px, 8px, 8px, 8px);
		
		background:#e9e9e9;
		margin-bottom:8px;
		padding:12px 12px 12px 0px;
		
		.num {
			color:#FFF;
			float:left;
			width:100px;
			text-align:right;
			
			h1 {
				font-size:6em;
				margin:0px;
			}
		}
		
		.line {
			float:right;
			width:$wrap-width - 140px;
			
			h3 {
				margin:0px !important;
				padding:14px 0px 6px 0px;
			}
			
		}
		
	}
	
}


#searchbox {
  	width: 648px;
  	height: 143px;
  	background: image-url('searchbox.png') center center no-repeat; 

	#searchbox-padding {
		padding:40px 25px 8px 140px;
		
		.index-search {
			background-color:#FFF;
			width:90%;
		}
		
	}
	
	h1 {
		font-size: 2em;
		margin: 0px 0px 8px 0px;
	}
	
	h3 {
		margin-bottom:10px !important;
		text-shadow:0px 1px 1px #FFF;
	}
	
}


/* Search Box */

.index-search {
    @include rounded(2px, 2px, 2px, 2px);
	@include box-shadow(inset 0 1px 1px rgba(0,0,0,0.1));

    border: 1px solid #ddd;
    color: #888;
	background: image-url('icons/search.png') no-repeat 5px 6px;
    font-size: 14px;
    height: 22px;
    line-height: 1.2em;
    padding: 4px 10px 4px 28px;
	width:240px;
}

.no-js {
  width: 60%; }