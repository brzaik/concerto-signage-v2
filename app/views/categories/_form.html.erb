<%= form_for(@category) do |f| %>
	<% if @category.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

		<ul>
			<% @category.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
  
	<fieldset>
  		<div class="field">
    		<%= f.label :name %>
    		<div class="inputs">
				<%= f.text_field :name %>
			</div>
  		</div>
		<div class="field">
    		<%= f.label :description, "Description (Optional)" %>
    		<div class="inputs">
				<%= f.text_area :description %>
			</div>
  		</div>
		<div class="field">
    		<%= f.label :is_help_page, "Is intended for help pages?" %>
    		<div class="inputs">
				<%= f.check_box :is_help_page %>
			</div>
  		</div>
  
  		<div class="actions">
    		<%= f.submit %>
  		</div>
	</fieldset>
	
<% end %>
