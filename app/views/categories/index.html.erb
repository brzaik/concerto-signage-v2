<hgroup>
	<h1>Categories List</h1>
	<% if current_user && current_user.is_admin? %>
	<h2><%= link_to "Create New Category", new_category_path %></h2>
	<% end %>
</hgroup>
<ul>
	<% @categories.each do |category| %>
	<li><%= category.name %> <% if current_user && current_user.is_admin? %>(<%= link_to "Edit Category", edit_category_path(category) %>, <%= link_to "Delete", category, :confirm => 'Are you sure you want to delete this category?', :method => :delete %>)<% end %></li>
	<% end %>
</ul>