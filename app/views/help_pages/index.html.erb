<h1>Listing help_pages</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Content</th>
    <th>User</th>
    <th>Position</th>
    <th>In menu</th>
    <th>Get feedback</th>
    <th>Short description</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @help_pages.each do |help_page| %>
  <tr>
    <td><%= help_page.category_id %></td>
    <td><%= help_page.name %></td>
    <td><%= help_page.content %></td>
    <td><%= help_page.user_id %></td>
    <td><%= help_page.position %></td>
    <td><%= help_page.in_menu %></td>
    <td><%= help_page.get_feedback %></td>
    <td><%= help_page.short_description %></td>
    <td><%= help_page.tags %></td>
    <td><%= link_to 'Show', help_page %></td>
    <td><%= link_to 'Edit', edit_help_page_path(help_page) %></td>
    <td><%= link_to 'Destroy', help_page, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

