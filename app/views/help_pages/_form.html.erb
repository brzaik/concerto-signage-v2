<% content_for :head do %>
	<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<% end %>

<%= form_for(@help_page) do |f| %>
	
	<fieldset>
  		<div class="field">
    		<%= f.label :name %>
    		<div class="inputs">
				<%= f.text_field :name %>
			</div>
  		</div>
  		<div class="field">
			<%= f.label :category_id, "Category" %>
			<div class="inputs">
				<%= f.select :category_id, Category.where(:is_help_page => true).collect {|c| [ c.name, c.id ] }  %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :content, "Page Content" %>
			<div class="inputs">
				<%= f.cktext_area :content, :width => '96%' %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :in_menu, "Appears in Menu?" %>
			<div class="inputs">
				<%= f.check_box 'in_menu'  %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :get_feedback, "Allow feedback?" %>
			<div class="inputs">
				<%= f.check_box 'get_feedback'  %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :position, "Position in menu" %>
			<div class="inputs">
				<%= f.text_field :position  %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :short_description %>
			<div class="inputs">
				<%= f.text_field :short_description  %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :tags %>
			<div class="inputs">
				<%= f.text_field :tags  %>
			</div>
  		</div>
  
  		<div class="actions">
    		<%= f.submit %>
  		</div>
	</fieldset>
	
<% end %>


