<p><%= link_to 'Back to Last Page', :back %></p>

<div id="search_results">
	<% count = 0 %>
	<h1>Results for query <b><%= params[:query] %></b></h1>
	
	<% for help_page in @help_pages %>
	<% count += 1 %>
	<div class="result">
		<div class="num">
			<h1><%= count %></h1>
		</div>
		<div class="line">
			<h3><%= link_to help_page.name, help_page %></h3>
			<p><%=raw help_page.content_snippet %></p>
		</div>
		<div class="clear"></div>
	</div>
	<% end %>
</div>