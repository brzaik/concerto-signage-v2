<% content_for :head do %>
	<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<% end %>

<%= form_for([@column, @block]) do |f| %>
  	<%= f.error_messages %>
	
	<fieldset>
		<div class="field">
    		<%= f.label :name %>
    		<div class="inputs">
				<%= f.text_field :name %>
			</div>
		</div>
  		<div class="field">
    		<%= f.label :html %>
    		<div class="inputs">
				<%= f.cktext_area :html, :width => '96%' %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :position %>
    		<div class="inputs">
				<%= f.text_field :position %>
			</div>
  		</div>    
  		<div class="actions">
    		<%= f.submit %>
  		</div>
	</fieldset>
<% end %>
