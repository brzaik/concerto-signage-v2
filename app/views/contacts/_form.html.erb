<%= form_for(@contact) do |f| %>
	<%= f.error_messages %>

  	<fieldset>
		<div class="field">
    		<%= f.label :name %>
    		<div class="inputs">
				<%= f.text_field :name %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :email %>
    		<div class="inputs">
				<%= f.text_field :email %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :body %>
    		<div class="inputs">
				<%= f.text_area :body %>
			</div>
  		</div>
  		<div class="actions">
    		<%= f.submit "Leave Feedback" %>
  		</div>
	</fieldset>
	
<% end %>
