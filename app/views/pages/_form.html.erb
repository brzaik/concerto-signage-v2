<%= form_for(@page) do |f| %>
	<%= f.error_messages %>

	<fieldset>
  		<div class="field">
			<%= f.label :category_id %>
			<div class="inputs">
				<%= f.select :category_id, Category.all.collect {|c| [ c.name, c.id ] }  %>
			</div>
  		</div>
  		<div class="field">
			<%= f.label :title %>
			<div class="inputs">
				<%= f.text_field :title %>
			</div>
  		</div>
		<div class="field">
			<%= f.label :short_description %>
			<div class="inputs">
				<%= f.text_field :short_description %>
			</div>
  		</div>
  		<div class="actions">
    		<%= f.submit %>
  		</div>
	</fieldset>
	
<% end %>
