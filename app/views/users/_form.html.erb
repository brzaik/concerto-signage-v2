<%= form_for(@user) do |f| %>
	<%= f.error_messages %>

	<fieldset>
  		<div class="field">
    		<%= f.label :username %>
    		<div class="inputs">
				<%= f.text_field :username %>
			</div>
  		</div>
  		<div class="field">
    		<%=	f.label :is_admin %>
    		<div class="inputs">
				<%= f.check_box :is_admin %>
			</div>
  		</div>  
  		<div class="field">
    		<%= f.label :name %>
    		<div class="inputs">
				<%= f.text_field :name %>
			</div>
  		</div>
  		<div class="field">
    		<%=	f.label :email %>
    		<div class="inputs">
				<%= f.text_field :email %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :greeting %>
    		<div class="inputs">
				<%= f.text_area :greeting %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :password %>
    		<div class="inputs">
				<%= f.password_field :password %>
			</div>
  		</div>
  		<div class="field">
    		<%= f.label :password_confirmation %>
    		<div class="inputs">
				<%= f.password_field :password_confirmation %>
			</div>
  		</div>  
  		<div class="actions">
    		<%= f.submit %>
  		</div>
	</fieldset>
	
<% end %>
