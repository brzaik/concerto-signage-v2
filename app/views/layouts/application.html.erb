<!DOCTYPE html>
<html>
	<head>
 	   	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title><%= yield_for_title(:title, controller.controller_name.titleize) %> - Concerto Digital Signage Project</title>
		
	    <meta name="keywords" content="<%= @meta_keywords %>" />
		<meta name="description" content="<%= @meta_description %>" />
		<link rel="publisher" href="https://plus.google.com/113721101312471729180" />		
		<%= stylesheet_link_tag "application" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>

		<!--[if lt IE 9]>
		<%= javascript_include_tag "html5.js" %>
		<![endif]-->
		
		<%= content_for :head %>
		
	</head>

	<body>

		<%= render :partial => "elements/flashblock" %>
		
    	<div id="stripe2" class="<%= content_for :stripe2_classes %>">
	    	<div id="stripe1">
				<div class="wrap">
					<%= render :partial => 'elements/mainmenu' %>
	     		</div>
			</div>
	      	<div id="stripe2-padding" class="<%= content_for :stripe2padding_classes %>">
		    	<%= content_for :stripe2_content %>
		    </div>
	    </div>
	    	
    	<div id="stripe3">
			<div class="wrap">
      			<div id="maincontent">
        			<div id="mc" style="width:100%;">
						<article>
					  		<%= yield %>
				  		</article>
        			</div>
          			<div style="clear:both;"></div>
        		</div>
      		</div>
		</div>
      
      	<div id="stripe4">
			<div class="wrap">
				<%= render :partial => 'elements/footer' %>
        	</div>
      	</div>
		<%#= render :partial => 'layouts/stats' %>
  	</body>
</html>
