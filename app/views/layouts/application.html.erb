<!DOCTYPE html>
<html>
	<head>
 	   <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	    <% if @title != nil %>
	    <title><%= @title %> - Concerto Digital Signage</title>
	    <% else %>
	    <title><%= controller.controller_name.titleize %> - Concerto Digital Signage Project</title>
	    <% end %>
	    <meta name="keywords" content="<%= @meta_keywords %>" />
		<meta name="description" content="<%= @meta_description %>" />
		
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "application" %>
		<%= javascript_include_tag :ckeditor %>
		<%= csrf_meta_tag %>

		<!--[if lt IE 9]>
		<%= javascript_include_tag "html5.js" %>
		<![endif]-->
		
	</head>

	<body<% if controller.controller_name == "pages" && controller.action_name == "show" %> class="category_<%= @page.category.name.downcase %>"<% end %>>

		<% if flash[:notice] %>
		<p id="flashblock"><%= flash[:notice] %></p>
		<% end %>
		
    	<div id="stripe2" class="<%= content_for :stripe2_classes %>">
	    	<div id="stripe1">
				<div class="wrap">
					<%= render :partial => 'elements/mainmenu' %>
	     		</div>
			</div>
	      	<div id="stripe2-padding" class="<%= content_for :stripe2padding_classes %>">
		    	<%= content_for :stripe2_content %>
				<!-- <div id="hp-top" class="wrap">
		    		<div id="hp-title">
		    			<h1><%# if @extratitle != "" %><%#= @extratitle %><%# else %><%#= @title %><%# end %></h1>
		    			<br /><br /><br />
		    		</div>
		    		<div style="clear:both;"></div>
		    	</div> -->
		    </div>
	    </div>
	    	
    	<div id="stripe3">
			<div class="wrap">
      			<div id="maincontent">
        			<div id="mc" style="width:100%;">
						<%#= render :partial => 'elements/adminfloat' %>
						
						<% # if this is pages/show/:id and a partial exists for the category, load that; otherwise, yield normally: %>
						<% if controller.controller_name == "pages" && controller.action_name == "show" %>
					    	<% if File.exists?(Rails.root + '/app/views/category_includes/' + '_' + @page.category.name.downcase + '.html.erb') %>
							<%= render :partial => 'category_includes/' + @page.category.name.downcase %>
						  	<% else %>
							<section>
						  		<%= yield %>
					  		</section>
							<% end %>
						<% else %>
					  	<article>
						  	<%= yield %>
					  	</article>
						<% end %>
						
        			</div>
          			<div style="clear:both;"></div>
        		</div>
      		</div>
		</div>
      
      	<div id="stripe4">
			<div class="wrap">
				<%= render :partial => 'elements/footer' %>
        	</div>
      	</div>
		<%#= render :partial => 'layouts/stats' %>
  	</body>
</html>
